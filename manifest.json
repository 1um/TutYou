{
    "name": "privateTutor",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Tutor for language learning",
	"options_page": "options/options.html",
    "browser_action": {
        "default_icon": "assets/TY.png",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "tabs",
        "http://*/*",
		"storage",
        "background",
        "contextMenus",
        "notifications"
    ],
	"icons": {
          "16": "assets/TY.png"
        },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            
            "js": ["privateT.js",
                    "assets/findAndReplaceDOMText.js",
                    "assets/Snowball.min.js"],
            "css": ["inject/tutYou.css"],
			"run_at": "document_end"
        }
    ],
	"background": {
		"scripts": [
		  "background.js",
          "assets/Snowball.min.js",
          "assets/translator.js"
		]
	},
    "web_accessible_resources": ["inject/inject.js","inject/templates.html","assets/star-on.png","assets/star-off.png"]
}